@model IEnumerable<Demo3.Models.House>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button class="btn btn-primary btn-xs"><a asp-action="Create" style="color: whitesmoke; text-decoration: none">Create New</a></button>
</p>
<table class="table table-hover ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnersName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.myProperty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropertyValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnersName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.myProperty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyValue)
            </td>
            <td>
                    <button class="btn btn-warning btn-sm"><a asp-action="Edit" asp-route-id="@item.Id" style="color: whitesmoke; text-decoration: none">Edit</a></button> |
                    <button class="btn btn-info btn-sm"><a asp-action="Details" asp-route-id="@item.Id" style="color: whitesmoke; text-decoration: none">Details</a></button> |
                    <button class="btn btn-danger btn-sm"><a asp-action="Delete" asp-route-id="@item.Id" style="color: whitesmoke; text-decoration: none">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
